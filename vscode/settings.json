{
    "workbench.colorTheme": "Monokai",
    "editor.fontSize": 16,
    "editor.fontFamily": "'DejaVu Sans Mono', monospace, 'Droid Sans Mono'",
    "editor.wordWrap": "wordWrapColumn",
    "editor.lineHeight": 24,
    "editor.rulers": [120],
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.smoothScrolling": true,
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.parameterHints": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "this.self",
                "scope": "variable.language",
                "settings": {
                    "foreground": "#F92672"
                }
            },
            {
                "name": "variable",
                "scope":"variable",
                "settings": {
                    "foreground": "#A6E22E"
                }
            },
            {
                "name": "class property",
                "scope":"variable.other.property",
                "settings": {
                    "foreground": "#F8F8F2"
                }
            },
            {
                "name": "Class name",
                "scope": "entity.name.type",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#F8F8F2"
                }
            },
            {
                "name": "Class extends",
                "scope": "entity.other.inherited-class",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#F8F8F2"
                }
            },
            {
                "name": "storage.type",
                "scope": "storage.type",
                "settings": {
                    "foreground": "#F92672"
                }
            },
            {
                "name": "support.class",
                "scope": "support.class",
                "settings": {
                    "foreground": "#F8F8F2"
                }
            },
            {
                "name": "support.function",
                "scope": "support.function",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#66D9EF"
                }
            },
            {
                "name": "entity.name.function",
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#55AAEE"
                }
            },
            {
                "name": "JS dot",
                "scope": "punctuation.accessor.js",
                "settings": {
                    "foreground": "#F92672"
                }
            },
            {
                "name": "support.type",
                "scope": "support.type",
                "settings": {
                    "foreground": "#F8F8F2"
                }
            },
            {
                "name": "string.quoted.double.json",
                "scope": "meta.structure.dictionary.json string.quoted.double.json",
                "settings": {
                    "foreground": "#E6DB74"
                }
            }
        ]
    },
    "editor.wordWrapColumn": 120,
    "editor.wordBasedSuggestions": false,
    "window.openFoldersInNewWindow": "on",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "activityBar.background": "#313437",
        "sideBar.background": "#313437",
        "sideBar.border": "#313437",
        "tab.activeBorder": "#EEEEEE",
        "tab.activeBackground": "#4C4F53",
        "tab.inactiveBackground": "#313437"
    },
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.list.openMode": "doubleClick",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.tabCloseButton": "off",
    "diffEditor.renderSideBySide": true,
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/vendor/**": true
    },
    "explorer.openEditors.visible": 0,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "search.exclude": {
        // "**/node_modules": true,
        // "**/bower_components": true,
        // "**/vendor": true
    },
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "attach",
                "protocol": "inspector",
                "timeout": 60000,
                "name": "debug"
            },
            {
                "name": "XDebug listen",
                "type": "php",
                "request": "launch",
                "port": 9000
            },
            {
                "name": "xdebug launch current",
                "type": "php",
                "request": "launch",
                "program": "${file}",
                "cwd": "${fileDirname}",
                "port": 9000
            }
        ]
    },
    "extensions.ignoreRecommendations": true,
    "guides.indent.showFirstIndentGuides": true,
    "guides.active.color.dark": "rgba(60, 60, 60, 0.75)",
    "guides.active.color.light": "rgba(220, 220, 220, 0.75)",
    "guides.stack.color.dark": "rgba(60, 60, 60, 0.75)",
    "guides.stack.color.light": "rgba(220, 220, 220, 0.75)",
    "guides.stack.enabled": false,
    "guides.updateDelay": 0.01,
    "guides.sendUsagesAndStats": false,
    "html.suggest.angular1": false,
    "html.suggest.ionic": false,
    "typescript.implementationsCodeLens.enabled": true,
    "typescript.npm": "/home/romainprignon/n/bin/npm",
    "typescript.useCodeSnippetsOnMethodSuggest": true,
    "telemetry.enableTelemetry": false,
    "php.suggest.basic": false,
    "php.validate.run": "onType",
    "eslint.run": "onSave",
    "eslint.autoFixOnSave": true,
    "eslint.options": {
        "rules": {
            "indent": 0,
            "eol-last": 0,
            "no-trailing-spaces": 0,
            "comma-dangle": 1,
            "object-curly-spacing": 1
        }
    },
    "phpcs.standard": "PSR2",
    "javascript.implicitProjectConfig.checkJs": false,
    "vsicons.dontShowNewVersionMessage": true,
    "material-icon-theme.showUpdateMessage": false,
    "[markdown]": {
        "editor.quickSuggestions": true
    },
    "macros": {
        "comment": [
            "editor.action.commentLine",
            "cursorDown"
        ]
    }
}
