{
    "editor.fontFamily": "'DejaVu Sans Mono', monospace, 'Droid Sans Mono'",
    "editor.fontSize": 15,
    "editor.formatOnPaste": true,    
    "editor.lineHeight": 22,
    "editor.minimap.enabled": false,
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.parameterHints": false,
    "editor.renderIndentGuides": true,
    "editor.rulers": [120],
    "editor.smoothScrolling": true,
    "editor.tokenColorCustomizations": {
        "[Solarized Light]": {
            "textMateRules": [
                {
                    "name": "this.self",
                    "scope": "variable.language",
                    "settings": {
                        "foreground": "#9B1847"
                    }
                },
                {
                    "name": "variable",
                    "scope": "variable",
                    "settings": {
                        "foreground": "#279727"
                    }
                },
                {
                    "name": "class property",
                    "scope": "variable.other.property",
                    "settings": {
                        "foreground": "#272822"
                    }
                },
                {
                    "name": "Class name",
                    "scope": "entity.name.type",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#272822"
                    }
                },
                {
                    "name": "Class extends",
                    "scope": "entity.other.inherited-class",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#272822"
                    }
                },
                {
                    "name": "storage.type",
                    "scope": "storage.type",
                    "settings": {
                        "foreground": "#9B1847"
                    }
                },
                {
                    "name": "support.class",
                    "scope": "support.class",
                    "settings": {
                        "foreground": "#272822"
                    }
                },
                {
                    "name": "support.function",
                    "scope": "support.function",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#268BD2"
                    }
                },
                {
                    "name": "entity.name.function",
                    "scope": "entity.name.function",
                    "settings": {
                        "foreground": "#406A9B"
                    }
                },
                {
                    "name": "JS dot",
                    "scope": "punctuation.accessor.js",
                    "settings": {
                        "foreground": "#9B1847"
                    }
                },
                {
                    "name": "support.type",
                    "scope": "support.type",
                    "settings": {
                        "foreground": "#272822"
                    }
                },
                {
                    "name": "string.quoted.double.json",
                    "scope": "meta.structure.dictionary.json string.quoted.double.json",
                    "settings": {
                        "foreground": "#979747"
                    }
                },
                {
                    "name": "keyword",
                    "scope": "keyword",
                    "settings": {
                        "foreground": "#9B1847"
                    }
                },
                {
                    "name": "storage",
                    "scope": "storage",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#9B1847"
                    }
                },
                {
                    "name": "entity.name.type",
                    "scope": "entity.name.type",
                    "settings": {
                        "foreground": "#474747"
                    }
                },
                {
                    "name": "variable.other",
                    "scope": "variable.other",
                    "settings": {
                        "foreground": "#279727"
                    }
                },
                {
                    "name": "string",
                    "scope": "string",
                    "settings": {
                        "foreground": "#979747"
                    }
                },
                {
                    "name": "constant.numeric",
                    "scope": "constant.numeric",
                    "settings": {
                        "foreground": "#5E4F9B"
                    }
                },
            ]
        },
        "[Monokai]": {
            "textMateRules": [
                {
                    "name": "this.self",
                    "scope": "variable.language",
                    "settings": {
                        "foreground": "#F92672"
                    }
                },
                {
                    "name": "variable",
                    "scope": "variable",
                    "settings": {
                        "foreground": "#A6E22E"
                    }
                },
                {
                    "name": "class property",
                    "scope": "variable.other.property",
                    "settings": {
                        "foreground": "#F8F8F2"
                    }
                },
                {
                    "name": "Class name",
                    "scope": "entity.name.type",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#F8F8F2"
                    }
                },
                {
                    "name": "Class extends",
                    "scope": "entity.other.inherited-class",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#F8F8F2"
                    }
                },
                {
                    "name": "storage.type",
                    "scope": "storage.type",
                    "settings": {
                        "foreground": "#F92672"
                    }
                },
                {
                    "name": "support.class",
                    "scope": "support.class",
                    "settings": {
                        "foreground": "#F8F8F2"
                    }
                },
                {
                    "name": "support.function",
                    "scope": "support.function",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#66D9EF"
                    }
                },
                {
                    "name": "entity.name.function",
                    "scope": "entity.name.function",
                    "settings": {
                        "foreground": "#55AAEE"
                    }
                },
                {
                    "name": "JS dot",
                    "scope": "punctuation.accessor.js",
                    "settings": {
                        "foreground": "#F92672"
                    }
                },
                {
                    "name": "support.type",
                    "scope": "support.type",
                    "settings": {
                        "foreground": "#F8F8F2"
                    }
                },
                {
                    "name": "string.quoted.double.json",
                    "scope": "meta.structure.dictionary.json string.quoted.double.json",
                    "settings": {
                        "foreground": "#E6DB74"
                    }
                }
            ]
        },
    },
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    
    "extensions.ignoreRecommendations": true,

    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": false, // editorconfig
    "files.trimTrailingWhitespace": false, // editorconfig
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/vendor/**": true
    },

    "launch": {
        "configurations": [
            {
                "name": "debug - node",
                "type": "node",
                "request": "attach",
                "protocol": "inspector",
                "timeout": 60000
            },
            {
                "name": "debug - php",
                "type": "php",
                "request": "launch",
                "port": 9000
            },
        ],
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/vendor": true
    },
    "search.location": "panel",

    "telemetry.enableTelemetry": false,

    "window.menuBarVisibility": "toggle",    
    "window.newWindowDimensions": "fullscreen",
    "window.openFoldersInNewWindow": "on",
    "window.zoomLevel": 0.3,

    "workbench.colorCustomizations": {
        "[Solarized Light]": {
            "activityBar.background": "#C7C7C7",

            "editor.background": "#F7F7E7",

            "editorIndentGuide.background": "#90909075",

            "editorLineNumber.foreground": "#909090",
            "editorLineNumber.activeForeground": "#606060",

            "scrollbarSlider.background": "#60606025",

            "sideBar.background": "#C7C7C7",
            "sideBar.border": "#C7C7C7",
            "sideBar.foreground": "#272822",

            "statusBar.foreground": "#272822",

            "tab.activeBackground": "#A7A7A7",
            "tab.activeBorder": "#272822",
            "tab.activeForeground": "#272822",
            "tab.inactiveBackground": "#C7C7C7",
            "tab.inactiveForeground": "#272822",
        },
        "[Monokai]": {
            "activityBar.background": "#313437",

            "editorIndentGuide.background": "#60606075",

            "scrollbarSlider.background": "#FFFFFF10",

            "sideBar.background": "#313437",
            "sideBar.border": "#313437",
            "sideBar.foreground": "#F8F8F2",

            "statusBar.foreground": "#F8F8F2",

            "tab.activeBackground": "#4C4F53",
            "tab.activeBorder": "#EDEDED",
            "tab.activeForeground": "#F8F8F2",
            "tab.inactiveBackground": "#313437",
            "tab.inactiveForeground": "#F8F8F2",
        },
        "editorCursor.foreground": "#FFA500",

        "editorOverviewRuler.addedForeground": "#232527",
        "editorOverviewRuler.deletedForeground": "#232527",
        "editorOverviewRuler.errorForeground": "#FF0000",
        "editorOverviewRuler.modifiedForeground": "#232527",

        "list.activeSelectionBackground": "#4C4F53",
        
        "peekViewEditor.background": "#313437"
    },
    "workbench.colorTheme": "Monokai",
    "workbench.editor.enablePreview": true, // false on search someday ? :(
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.tabCloseButton": "off",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.openMode": "singleClick",
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.view.alwaysShowHeaderActions": true,    
    
    // === langage ===

    "html.suggest.angular1": false,
    "html.suggest.ionic": false,

    "javascript.implicitProjectConfig.checkJs": true,
    "javascript.nameSuggestions": true, // allow auto-import
    "javascript.validate.enable": false,

    "[markdown]": {
        "editor.quickSuggestions": true
    },

    "php.suggest.basic": false, // PHP IntelliSense

    "typescript.reportStyleChecksAsWarnings": false, // false for error ?
    "typescript.useCodeSnippetsOnMethodSuggest": true,

    "[javascript]": {
        "editor.codeActionsOnSave": {}
    },
    "[typescript]": {
        "editor.codeActionsOnSave": {}
    },
    "[php]": {
        "editor.codeActionsOnSave": {}
    },
    
    // === extension ===
    
    "auto-close-tag.activationOnLanguage": [
        "html",
        "xml",
        "javascript",
        "javascriptreact",
        "typescriptreact"
    ],
    
    "eslint.autoFixOnSave": true,
    "eslint.run": "onSave",

    "macros": {
        "comment": [
            "editor.action.commentLine",
            "cursorDown"
        ]
    },
    
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.showReloadMessage": false,
    "material-icon-theme.showUpdateMessage": false,
    
    "phpcs.standard": "PSR2",

    "tslint.autoFixOnSave": true,
    "tslint.run": "onSave"
}
