export RED
export YELLOW
export GREEN
export PURPLE
export BLUE
export CYAN
export WHITE
export BLACK
export BOLD
export RESET

PS1="\n"
#chroot ${debian_chroot:+($debian_chroot)}

if [[ $TERM == *xterm* ]]; then
    PS1="$PS1\[\e]0;\u@\h:\w\a\]"
fi

if [ -n "$SSH_CLIENT" ]; then
    if [ "$color_prompt" = yes ]; then
        PS1="$PS1\[$BOLD$PURPLE\]\u\[$WHITE\]@\[$PURPLE\]\h \[$CYAN\]\w"
	else
	    PS1="$PS1\u@\h \w"
	fi
else
    if [ "$color_prompt" = yes ]; then
        PS1="$PS1\[$PURPLE\]\u \[$CYAN\]\w"
	else
	    PS1="$PS1\u \w"
	fi
fi

if [ -f ~/.git_prompt ]; then
    source ~/.git_prompt
    #source ~/.git-prompt/gitprompt.sh
    #PS1="$PS1\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" \[$YELLOW\](\$(parse_git_branch))\")"
    PS1="$PS1\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" \[$YELLOW\][\$(get_git_info)]\")"
    #PS1="$PS1\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" \[$YELLOW\](\$(setGitPrompt))\")"
fi

if [ "$color_prompt" = yes ]; then
    if [ $(id -u) -eq 0 ]; then
        PS1="$PS1 \[$RED\]\$\[$RESET\] "
    else
        PS1="$PS1 \[$WHITE\]\$\[$RESET\] "
    fi
else
    PS1="$PS1 \$\[$RESET\] "
fi

unset color_prompt force_color_prompt
